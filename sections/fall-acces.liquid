
{{ "fall-acces.css" | asset_url | stylesheet_tag }}
{{ "custom-style.css" | asset_url | stylesheet_tag }}

<section class="page-width fall-acces mb-80 mt-80">

    {% if section.settings.fall_image %}
        {% render 'image', imageSrc: section.settings.fall_image, classes: 'fall-img' %}
    {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'fall-img' }}
    {% endif %}

    <div class="fall-acces__content">
        <p class="fall-acces__text fall-txt">{{ section.settings.fall_text }}</p>
        <h2 class="fall-acces__title fall-txt">{{ section.settings.fall_title }}</h2>
        <p class="fall-acces__text fall-txt">{{ section.settings.fall_description }}</p>
        <a href="{{ section.settings.button_link1 }}" class="btn-transparent btn-property fall-btn" >{{ section.settings.button_text2 }}</a> 
        <a href="{{ section.settings.button_link2 }}" class="btn-transparent btn-property fall-btn">{{ section.settings.button_text2 }}</a> 
    </div>

    <div class="fall-overlay">&nbsp;</div>
</section>

{% schema %}
    {
        "name": "Fall Accessories",
        "settings": [
            {
            "type": "image_picker",
            "id": "fall_image",
            "label": "Image"
            },
            {
            "type": "text",
            "id": "fall_title",
            "label": "Title"
            },
            {
            "type": "text",
            "id": "fall_description",
            "label": "Description"
            },
            {
            "type": "text",
            "id": "fall_text",
            "label": "Add Text"
            },
            {
            "type": "text",
            "id": "button_text1",
            "label": "Button Text"
            },
            {
            "type": "url",
            "id": "button_link1",
            "label": "Button Link"
            },

             {
            "type": "text",
            "id": "button_text2",
            "label": "Button Text"
            },
             {
            "type": "url",
            "id": "button_link2",
            "label": "Button Link"
            }

        ],
        
        "presets": [
            {
                "name": "Fall Accessories"
            }
            
        ]
    }
{% endschema %}